<main class="container mt-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Estado de Mis Documentos</h2>
        <a href="/dashboard_usuario" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Volver</a>
    </div>

    <div class="card mb-4">
        <div class="card-header">Filtros de Documentos</div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="documentTypeFilter" class="form-label">Tipo de Documento</label>
                    <select id="documentTypeFilter" class="form-select">
                        <option value="all">Todos</option>
                        <option value="justification">Justificaciones</option>
                        <option value="license">Licencias Médicas</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="statusFilter" class="form-label">Estado</label>
                    <select id="statusFilter" class="form-select">
                        <option value="all">Todos</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="Aprobada">Aprobada</option>
                        <option value="Rechazada">Rechazada</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex flex-column">
                    <label for="folioFilter" class="form-label">Código de Licencia (folio)</label>
                    <input type="text" id="folioFilter" class="form-control" placeholder="Ej: F123456">
                    <small class="form-text text-muted">Aplica solo a Licencias Médicas</small>
                    <div class="mt-auto">
                        <button id="applyFiltersBtn" class="btn btn-primary w-100 mt-2">Aplicar Filtros</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">Mis Documentos</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="myDocumentsTable">
                    <thead>
                                <tr>
                                    <th>Tipo</th>
                                    <th>Profesional</th>
                                    <th>Folio</th>
                                    <th>Fechas</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                    </thead>
                    <tbody>
                        <!-- Contenido cargado dinámicamente por JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/my_documents_status.js"></script>
