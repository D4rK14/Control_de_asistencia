<body>
  <div class="container mt-4 mb-4">
    <h2 class="mb-4">Bienvenido, {{usuario.nombre}}</h2>

    <div class="d-flex justify-content-end mb-4">
        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#confirmLogoutModal">
            Cerrar Sesión
        </button>
    </div>

    {{#if usuario.isAdmin}}
    <div class="d-flex justify-content-end mb-4">
        <a href="/admin/users" class="btn btn-info">Gestión de Usuarios</a>
    </div>
    {{/if}}

    <!-- Marcación de asistencia -->
    <div class="card mb-4">
      <div class="card-header">Marcación de Asistencia</div>
      <div class="card-body">
        <form id="asistenciaForm" method="POST">
          <button type="submit" name="tipo" value="entrada" class="btn btn-success me-2">Registrar Entrada</button>
          <button type="submit" name="tipo" value="salida" class="btn btn-danger">Registrar Salida</button>
        </form>
      </div>
    </div>

    <!-- Reportes personales -->
    <div class="card mb-4">
      <div class="card-header">Tus Reportes</div>
      <div class="card-body">
        <table class="table table-striped" id="asistenciasTable">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Hora Entrada</th>
              <th>Hora Salida</th>
              <th>Tipo</th>
              <th>Justificación</th>
            </tr>
          </thead>
          <tbody>
            {{#each asistencias}}
            <tr>
              <td>{{this.fecha}}</td>
              <td>{{this.hora_entrada}}</td>
              <td>{{this.hora_salida}}</td>
              <td>{{this.tipo_asistencia}}</td>
              <td>
                {{#if this.documento}}
                  <a href="{{this.documento}}" target="_blank">Ver</a>
                {{else}}
                  -
                {{/if}}
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Justificar inasistencias -->
    <div class="card mb-4">
      <div class="card-header">Justificaciones</div>
      <div class="card-body">
        <a href="/inasistencia" class="btn btn-primary">Justificar Inasistencia</a>
        <a href="/licencia_medica" class="btn btn-primary">Justificar Licencia Medica</a>
      </div>
    </div>
  </div>

  <!-- Modal de Confirmación -->
  <div class="modal fade" id="confirmLogoutModal" tabindex="-1" aria-labelledby="confirmLogoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmLogoutModalLabel">Confirmar Cierre de Sesión</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          ¿Estás seguro de que quieres cerrar sesión?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <a href="/logout" class="btn btn-primary">Cerrar Sesión</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal de Notificación -->
  <div class="modal fade" id="notificationModal" tabindex="-1" aria-labelledby="notificationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="notificationModalLabel">Notificación</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="notificationModalBody">
          <!-- Mensaje dinámico aquí -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    window.usuarioId = {{usuario.id}};
  </script>
  <script src="/js/dashboard_usuario.js"></script>
</body>
</html>
