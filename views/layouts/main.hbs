<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Empresa</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Optional: Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="" crossorigin="anonymous"/>

    <style>
        /* Estilos m√≠nimos para el layout */
        body { padding-top: 56px; }
        .fab {
            position: fixed;
            right: 24px;
            bottom: 24px;
            z-index: 1050;
        }
        .card-kpi { min-height: 100px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Control de Asistencia</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="navbar-text" id="server-time"></span>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {{{body}}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    function updateServerTime() {
        fetch('/api/time')
            .then(response => response.json())
            .then(data => {
                const timeElement = document.getElementById('server-time');
                if (timeElement) {
                    timeElement.innerText = data.time;
                }
            })
            .catch(error => console.error('Error fetching server time:', error));
    }

    setInterval(updateServerTime, 1000);
    updateServerTime(); // Llamada inicial
</script>
    {{{_sections.scripts}}}
</body>
</html>