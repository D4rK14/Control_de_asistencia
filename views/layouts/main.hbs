<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Empresa</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Optional: Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="" crossorigin="anonymous"/>

    <!-- FullCalendar CSS -->
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css' rel='stylesheet' />

    <!-- App styles -->
    <link rel="stylesheet" href="/css/style.css">

    <style>
        /* Estilos m√≠nimos para el layout */
        body { padding-top: 56px; }
        .fab {
            position: fixed;
            right: 24px;
            bottom: 24px;
            z-index: 1050;
        }
        .card-kpi { min-height: 100px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <span>Control de Asistencia</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item text-end">
                        <span class="navbar-text text-white lh-1 fs-6" id="server-datetime"></span>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {{{body}}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Moment.js (necesario para el reloj y FullCalendar) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/locale/es.js"></script>
    <!-- FullCalendar JS -->
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/locales/es.js'></script>
    <script>
    // Ensure DOM is ready and avoid creating duplicate intervals on hot-reload
    document.addEventListener('DOMContentLoaded', function () {
        moment.locale('es');
        const dtElement = document.getElementById('server-datetime');

        function updateServerTime() {
            const now = moment();
            if (dtElement) {
                dtElement.innerText = now.format('D [de] MMMM [de] YYYY') + ' | ' + now.format('HH:mm:ss');
            }
        }

        // run immediately and then every second
        updateServerTime();
        if (window._serverTimeInterval) clearInterval(window._serverTimeInterval);
        window._serverTimeInterval = setInterval(updateServerTime, 1000);
    });
</script>
    {{{_sections.scripts}}}
</body>
</html>