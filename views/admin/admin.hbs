<head>
    <title>Administrador - Control de Asistencia</title>    
</head>
<body>
    <!-- Navbar simple -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Control de Asistencia - Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/admin">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/users">Usuarios</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/justificaciones">Justificaciones</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/licencias">Licencias</a></li>
                    <li class="nav-item"><a class="nav-link" href="/logout">Salir</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid mt-4">
        <div class="row">
            <div class="col-12 mb-4">
                <h1 class="h3">Dashboard</h1>
                <p class="text-muted">Resumen rápido de asistencia</p>
            </div>
        </div>

        <!-- Tarjetas KPI -->
        <div class="row g-3 mb-4">
            <div class="col-sm-6 col-md-3">
                <div class="card card-kpi shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fa-solid fa-users-check fa-2x text-success"></i>
                        </div>
                        <div>
                            <div class="text-muted small">% asistencia del día</div>
                            <div class="h4 mb-0">{{attendancePercent}}%</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-3">
                <div class="card card-kpi shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fa-solid fa-clock-rotate-left fa-2x text-warning"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Nº atrasos</div>
                            <div class="h4 mb-0">{{lateCount}}</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-3">
                <div class="card card-kpi shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fa-solid fa-person-walking-arrow-left fa-2x text-info"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Nº salidas anticipadas</div>
                            <div class="h4 mb-0">{{earlyLeaveCount}}</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-3">
                <div class="card card-kpi shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="fa-solid fa-user-slash fa-2x text-danger"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Nº inasistencias</div>
                            <div class="h4 mb-0">{{absentCount}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Módulo de reportes -->
        <div class="row g-3 mb-5">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Reportes</h5>
                            <small class="text-muted">Tabla detallada de registros</small>
                        </div>
                        <div>
                            <a href="/admin/reports/export?format=excel" class="btn btn-outline-success btn-sm me-2">
                                <i class="fa-solid fa-file-excel"></i> Exportar Excel
                            </a>
                            <a href="/admin/reports/export?format=pdf" class="btn btn-outline-danger btn-sm">
                                <i class="fa-solid fa-file-pdf"></i> Exportar PDF
                            </a>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="reportsTable">
                                <thead>
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Usuario</th>
                                        <th>Entrada</th>
                                        <th>Salida</th>
                                        <th>Estado</th>
                                        <th>Comentarios</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each reports}}
                                        <tr>
                                            <td>{{this.date}}</td>
                                            <td>{{this.user}}</td>
                                            <td>{{this.checkIn}}</td>
                                            <td>{{this.checkOut}}</td>
                                            <td>{{this.status}}</td>
                                            <td>{{this.note}}</td>
                                        </tr>
                                    {{/each}}
                                    {{!-- Si no hay datos, mostrar una fila vacía --}}
                                    {{^reports}}
                                        <tr><td colspan="6" class="text-center text-muted">No hay registros</td></tr>
                                    {{/reports}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Módulo de gestión de usuarios -->
        <div class="row g-3 mb-5">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Gestión de usuarios</h5>
                            <small class="text-muted">Lista de todos los usuarios</small>
                        </div>
                        <div>
                            <a href="/admin/users" class="btn btn-primary btn-sm">
                                <i class="fa-solid fa-users"></i> Ir a Gestión de Usuarios
                            </a>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover" id="usersTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>RUT</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Correo</th>
                                        <th>Rol</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each users}}
                                        <tr>
                                            <td>{{this.id}}</td>
                                            <td>{{this.rut}}</td>
                                            <td>{{this.nombre}}</td>
                                            <td>{{this.apellido}}</td>
                                            <td>{{this.correo}}</td>
                                            <td>{{this.rol.nombre}}</td>
                                            <td class="text-end">
                                                <a href="/admin/users/{{this.id}}" class="btn btn-sm btn-outline-secondary me-1">
                                                    <i class="fa-solid fa-pen"></i> Ver/Editar
                                                </a>
                                                <button data-id="{{this.id}}" class="btn btn-sm btn-outline-danger btn-delete-user-dashboard">
                                                    <i class="fa-solid fa-trash"></i> Eliminar
                                                </button>
                                            </td>
                                        </tr>
                                    {{/each}}
                                    {{^users}}
                                        <tr><td colspan="7" class="text-center text-muted">No hay usuarios</td></tr>
                                    {{/users}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>

    <!-- Script para SweetAlert2 y manejo de eliminación de usuarios (ajustado para el dashboard) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin_dashboard.js"></script>