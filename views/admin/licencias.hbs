<main class="container mt-4">
    <div class="row">
        <div class="col-12 mb-3 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h4 mb-0">Gestión de Licencias Médicas</h1>
                <small class="text-muted">Revisa y actualiza el estado de las licencias</small>
            </div>
            <div class="d-flex gap-2">
                <a href="/dashboard_usuario" class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-left"></i> Volver</a>
                <button id="btnRefreshLic" class="btn btn-outline-primary"><i class="fa-solid fa-rotate"></i> Actualizar</button>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-sm-6 col-md-4">
                    <label for="filtroRut" class="form-label mb-1">Filtrar por RUT</label>
                    <input type="text" id="filtroRut" class="form-control" placeholder="Ej: 12.345.678-9 o 12345678-9" />
                </div>
                <div class="col-sm-6 col-md-3">
                    <button id="btnAplicarFiltro" class="btn btn-primary w-100">Aplicar Filtro</button>
                </div>
                <div class="col-sm-6 col-md-3">
                    <button id="btnLimpiarFiltro" class="btn btn-outline-secondary w-100">Limpiar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="licenciasTable">
                    <thead>
                        <tr>
                            <th>Usuario (Nombre y RUT)</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Detalle Licencia -->
    <div class="modal fade" id="licenciaDetalleModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalle de Licencia</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="detalleLicenciaBody">
                        <!-- Contenido dinámico -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/admin_licencias.js"></script>


